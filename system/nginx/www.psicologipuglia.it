# configuration of the server
server {
    # the port your site will be served on
    listen      80;
    # the domain name it will serve for
    server_name oo.psicologipuglia.it;
    charset     utf-8;

    # max upload size
    client_max_body_size 75M;   # adjust to taste

    # Django media
    location /media  {
        alias /home/oo/oo.psicologipuglia.it/public/media;
    }

    location /static {
        alias /home/oo/oo.psicologipuglia.it/public/static;
    }

    # Finally, send all non-media requests to the Django server.
    location / {
        uwsgi_pass  oo;
        include     /home/oo/oo.psicologipuglia.it/private/nginx/uwsgi_params;
    }

}


